{
  "swagger": "2.0",
  "info": {
    "title": "Mijn Afval API",
    "description": "",
    "version": "1.0"
  },
  "produces": ["application/json"],
  "tags": [
    {
      "name": "Announcements",
      "description": "Announcements made by the garbage collecting company/municipality"
    },
    {
      "name": "Locations",
      "description": "Everything that has to do with locations"
    }
  ],
  "paths": {
    "/announcements/all": {
      "get": {
        "operationId": "all",
        "tags": ["Announcements"],
        "summary": "Returns JSON array of announcements",
        "parameters": [
          {
            "name": "zipcode",
            "in": "query",
            "description": "Zip code of user",
            "required": true,
            "type": "string"
          },
          {
            "name": "houseNumber",
            "in": "query",
            "description": "House number of user",
            "required": true,
            "type": "number"
          },
          {
            "name": "houseNumberAddition",
            "in": "query",
            "description": "House number addition of user",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Announcements"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/locations/address": {
      "get": {
        "operationId": "address",
        "tags": ["Locations"],
        "summary": "Returns Address json object",
        "parameters": [
          {
            "name": "zipcode",
            "in": "query",
            "description": "Zip code of user",
            "required": true,
            "type": "string"
          },
          {
            "name": "houseNumber",
            "in": "query",
            "description": "House number of user",
            "required": true,
            "type": "number"
          },
          {
            "name": "houseNumberAddition",
            "in": "query",
            "description": "House number addition of user",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Address"
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/locations/municipalities": {
          "get": {
              "operationId": "all",
              "tags": ["Locations"],
              "summary": "Returns JSON array of municipalities",
              "responses": {
                  "200": {
                      "description": "OK",
                      "schema": {
                          "type": "array",
                          "items": {
                              "$ref": "#/definitions/Municipality"
                          }
                      }
                  },
                  "400": {
                      "description": "Bad Request"
                  }
              }
          }
      }
  },
  "definitions": {
    "Address": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "description": "If the address was successfully retrieved"
        },
        "street": {
          "type": "string",
          "description": "Street of the address"
        },
        "houseNumber": {
          "type": "number",
          "description": "House number of the address"
        },
        "houseNumberAddition": {
          "type": "string",
          "description": "House number addition of the address"
        },
        "zipcode": {
          "type": "string",
          "description": "Zip code of the address"
        },
        "city": {
          "type": "string",
          "description": "City of the address"
        },
        "country": {
          "type": "string",
          "description": "Two letter country code of the address"
        },
        "latitude": {
          "type": "string",
          "description": "Latitude of the address"
        },
        "longitude": {
          "type": "string",
          "description": "Longitude of the address"
        }
      }
    },
    "Announcements": {
      "type": "object",
      "properties": {
        "startDate": {
          "type": "string",
          "example": "13-01-1970"
        },
        "endDate": {
          "type": "string",
          "example": "31-01-1970"
        },
        "title": {
          "type": "string",
          "example": "Collection day moved"
        },
        "body": {
          "type": "string",
          "example": "The collection day for this month changed to friday"
        }
      }
    },
    "Municipality": {
      "type": "object",
      "properties": {
        "country": {
          "type": "string",
          "description": "Two letter country code of the address"
        },
        "city": {
          "type": "string",
          "description": "Municipality"
        }
      }
    }
  }
}